<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Abutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:background="#009688"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Bbutton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/Bbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:background="#9C27B0"
        app:layout_constraintLeft_toRightOf="@+id/Abutton"
        app:layout_constraintRight_toLeftOf="@+id/Cbuttom"
        app:layout_constraintBaseline_toBaselineOf="@+id/Abutton"/>

    <Button
        android:id="@+id/Cbuttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:background="#FFEB3B"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Bbutton"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bbutton"/>
    <Button
        android:id="@+id/Dbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        app:layout_constraintTop_toBottomOf="@+id/Abutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Ebutton"/>
    <Button
        android:id="@+id/Ebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        app:layout_constraintLeft_toRightOf="@+id/Dbutton"
        app:layout_constraintTop_toBottomOf="@+id/Bbutton"
        app:layout_constraintRight_toLeftOf="@+id/Fbutton"/>
    <Button
        android:id="@+id/Fbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        app:layout_constraintLeft_toRightOf="@+id/Ebutton"
        app:layout_constraintTop_toBottomOf="@+id/Cbuttom"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>